<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="EVENT_CREDIT_RULE">
	<select id="create" parameterType="com.smartool.common.dto.EventCreditRule">
		insert eventCreditRules (id,
		name,
		credit,eventTypeId,seriesId,rank, createdTime,
		lastModifiedTime)
		values
		(#{id},#{name},#{credit},#{eventTypeId},#{seriesId},#{rank},now(),now())
	</select>
	<select id="update" parameterType="com.smartool.common.dto.EventCreditRule">
		update eventCreditRules
		set
		name=#{name},
		credit=#{credit},
		eventTypeId=#{eventTypeId},
		seriesId=#{seriesId},
		rank=#{rank}
		where id =
		#{id};
	</select>

	<select id="listAll" resultType="com.smartool.common.dto.EventCreditRule">
		select * from eventCreditRules
	</select>

	<select id="remove" parameterType="String">
		delete from eventCreditRules
		where
		id = #{id}
	</select>

	<select id="getById" parameterType="String"
		resultType="com.smartool.common.dto.EventCreditRule">
		select *
		from eventCreditRules where id = #{id}
	</select>
</mapper>
